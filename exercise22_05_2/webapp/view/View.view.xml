<mvc:View controllerName="sync.d22.exercise22052.controller.View"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Label id="label" text="{i18n>putText}" required="true"></Label>
            <Input id="input" value="{/input}" width="60%" class="sapUiMediumMargin"></Input>
            <Button id="button" press=".onPress" text="{i18n>btnText}" class="sapUiMediumMargin"></Button>
        </content>
    </Page>
</mvc:View>