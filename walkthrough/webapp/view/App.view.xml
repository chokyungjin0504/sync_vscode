<mvc:View
   controllerName="ui5.walkthrough.controller.App" 
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   
   <Button
      text="Say Hello"
      press=".onShowHello"/>
      
   <Input
      value="{/recipient/name}"
      description="Hello {/recipient/name}"
      valueLiveUpdate="true"
      width="60%"/>
</mvc:View>

<!-- 내 controller는 ui5.walkthorough.controller.App의 지배를 받아 --> 

<!-- mvc를 사용할 것임
    text는 sap.m의 text이다 -->